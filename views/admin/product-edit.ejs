<%- include("../../views/partials/admin/header") %>
<head>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.css">
  <!-- Bootstrap CSS CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

 <style>
  :root {
    --primary-color: #1e90ff;
    --secondary-color: #2d3436;
    --success-color: #00b894;
    --danger-color: #d63031;
    --info-color: #0984e3;
    --warning-color: #fdcb6e;
    --light-gray: #dfe6e9;
    --background-color: #f5f6fa;
    --white: #ffffff;
    --shadow: 0 4px 12px rgba(0, 0, 0, 0.06);
    --transition: all 0.3s ease;
  }

  .content-main {
    margin-left: 321px;
    margin-top: 126px;
    padding: 20px;
  }

  .section {
    background-color: var(--white);
    padding: 25px;
    margin-bottom: 30px;
    border-radius: 12px;
    box-shadow: var(--shadow);
    transition: var(--transition);
  }

  .section:hover {
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
  }

  .section h2 {
    font-size: 22px;
    margin-bottom: 25px;
    color: var(--secondary-color);
    font-weight: 600;
    border-bottom: 2px solid var(--light-gray);
    padding-bottom: 12px;
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .section h2 i {
    color: var(--primary-color);
    font-size: 20px;
  }

  .form-label {
    font-weight: 500;
    color: var(--secondary-color);
    margin-bottom: 8px;
    font-size: 14px;
  }

  input.form-control,
  textarea.form-control,
  select.form-select {
    padding: 12px 15px;
    border-radius: 8px;
    border: 1px solid var(--light-gray);
    font-size: 14px;
    transition: var(--transition);
    background-color: var(--white);
  }

  input.form-control:focus,
  textarea.form-control:focus,
  select.form-select:focus {
    border-color: var(--primary-color);
    box-shadow: 0 0 0 0.2rem rgba(30, 144, 255, 0.1);
    outline: none;
  }

  .image-upload-container {
    border: 2px dashed var(--light-gray);
    border-radius: 10px;
    padding: 20px;
    background-color: #f8f9fa;
    transition: var(--transition);
    text-align: center;
  }

  .image-upload-container:hover {
    border-color: var(--primary-color);
    background-color: rgba(30, 144, 255, 0.02);
  }

  button[type="submit"] {
    padding: 12px 30px;
    border-radius: 8px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: var(--transition);
  }

  .card-img-top {
    border-radius: 6px 6px 0 0;
    height: 200px;
    object-fit: cover;
  }

  .card-body {
    padding: 15px;
    text-align: center;
  }

  .preview-container img {
    border-radius: 6px;
    max-height: 200px;
  }

  /* Variants Specific Styles */
  .variants-container {
    background-color: #f8f9fa;
    border-radius: 10px;
    padding: 20px;
    margin-top: 20px;
  }

  .variant-item {
    background-color: var(--white);
    border: 1px solid var(--light-gray);
    border-radius: 10px;
    padding: 20px;
    margin-bottom: 15px;
    position: relative;
    transition: var(--transition);
  }

  .variant-item:hover {
    border-color: var(--primary-color);
    box-shadow: 0 2px 8px rgba(30, 144, 255, 0.1);
  }

  .variant-header {
    display: flex;
    justify-content: between;
    align-items: center;
    margin-bottom: 20px;
    padding-bottom: 10px;
    border-bottom: 1px solid var(--light-gray);
  }

  .variant-title {
    font-weight: 600;
    color: var(--secondary-color);
    font-size: 16px;
    margin: 0;
  }

  .variant-remove {
    position: absolute;
    top: 15px;
    right: 15px;
    background: none;
    border: none;
    color: var(--danger-color);
    font-size: 18px;
    cursor: pointer;
    transition: var(--transition);
    width: 30px;
    height: 30px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .variant-remove:hover {
    background-color: var(--danger-color);
    color: var(--white);
  }

  .add-variant-btn {
    background: linear-gradient(135deg, var(--success-color), #00a085);
    border: none;
    color: var(--white);
    padding: 12px 25px;
    border-radius: 8px;
    font-weight: 600;
    transition: var(--transition);
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .add-variant-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(0, 184, 148, 0.3);
  }

  .color-input-group {
    position: relative;
  }

  .color-picker {
    position: absolute;
    right: 10px;
    top: 50%;
    transform: translateY(-50%);
    width: 30px;
    height: 30px;
    border: none;
    border-radius: 6px;
    cursor: pointer;
  }

  .size-badge {
    display: inline-block;
    padding: 4px 12px;
    background-color: var(--info-color);
    color: var(--white);
    border-radius: 20px;
    font-size: 12px;
    font-weight: 500;
    margin: 2px;
  }

  .quantity-input {
    text-align: center;
    font-weight: 600;
  }

  .form-floating {
    position: relative;
  }

  .form-floating > .form-control,
  .form-floating > .form-select {
    height: calc(3.5rem + 2px);
    line-height: 1.25;
    padding: 1rem 0.75rem 0.25rem;
  }

  .form-floating > label {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    padding: 1rem 0.75rem;
    pointer-events: none;
    border: 1px solid transparent;
    transform-origin: 0 0;
    transition: opacity 0.1s ease-in-out, transform 0.1s ease-in-out;
    color: #6c757d;
  }

  .alert-info {
    background-color: rgba(30, 144, 255, 0.1);
    border-color: rgba(30, 144, 255, 0.2);
    color: var(--primary-color);
    border-radius: 10px;
  }
</style>
</head>

